<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sunvua.ljy.dao.SequenceDOMapper">
    <resultMap id="BaseResultMap" type="com.sunvua.ljy.model.SequenceModel">
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="current_value" jdbcType="INTEGER" property="currentValue" />
        <result column="step" jdbcType="INTEGER" property="step"/>
    </resultMap>
    <select id="getSequenceByName" parameterType="java.lang.String" resultMap="BaseResultMap">
        select name,current_value,step
        from sequence_info
        where name=#{name} for update
    </select>
    <update id="updateByPrimaryKeySelective" parameterType="com.sunvua.ljy.model.SequenceModel">
        update sequence_info
        set current_value=#{currentValue}
        where name=#{name}
    </update>
</mapper>