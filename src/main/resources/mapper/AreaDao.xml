<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sunvua.ljy.dao.AreaDao">
    <!--<resultMap id="gainUsers" type="com.sunvua.ljy.model.Area">-->
        <!--<id property="id" column="id" jdbcType="VARCHAR" />-->
        <!--<result property="username" column="username" jdbcType="VARCHAR" />-->
        <!--<result property="password" column="password" jdbcType="VARCHAR" />-->
    <!--</resultMap>-->

    <select id="queryArea" resultType="com.sunvua.ljy.model.Area">
        select * from tb_area
        order by priority
        desc
    </select>
    <select id="queryAreaById" resultType="com.sunvua.ljy.model.Area">
        select area_id,area_name,priority,create_time,last_edit_time
        from tb_area
        where
        area_id=#{areaId}
    </select>
    <insert id="insertArea" useGeneratedKeys="true" keyProperty="areaId" keyColumn="area_id" parameterType="com.sunvua.ljy.model.Area">
        INSERT INTO
        tb_area(area_name,priority,
        create_time,last_edit_time)
        VALUES
        (#{areaName},#{priority},#{createTime},#{lastEditTime})
    </insert>
    <update id="updateArea" parameterType="com.sunvua.ljy.model.Area">
        update tb_area
        <set>
            <if test="areaName!=null">
                area_name=#{areaName},
            </if>
            <if test="priority!=null">priority=#{priority},</if>
            <if test="lastEditTime!=null">last_edit_time=#{lastEditTime}</if>
        </set>
        where area_id=#{areaId}
    </update>
    <delete id="delectArea">
        Delete FROM
        tb_area
        where
        area_id=#{areaId}
    </delete>
</mapper>